{
  "name": "browser",
  "displayName": "AlbertPlus",
  "version": "0.0.1",
  "description": "A NYU course registration companion for Albert",
  "author": "Tech@NYU <hello@techatnyu.org>",
  "scripts": {
    "dev": "doppler run -- plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check:types": "tsc -noEmit"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.8.8",
    "convex": "^1.30.0",
    "plasmo": "0.90.5",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "postcss": "8.5.6",
    "typescript": "5.9.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "$CLERK_FRONTEND_API/*"
    ]
  }
}
