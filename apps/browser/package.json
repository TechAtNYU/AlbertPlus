{
  "name": "browser",
  "displayName": "AlbertPlus",
  "version": "0.0.1",
  "description": "A NYU course registration companion for Albert",
  "author": "Tech@NYU <hello@techatnyu.org>",
  "scripts": {
    "dev": "doppler run -- plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "check": "biome check",
    "check:types": "tsc -noEmit"
  },
  "dependencies": {
    "@albert-plus/server": "workspace:*",
    "@clerk/chrome-extension": "^2.7.8",
    "convex": "^1.28.0",
    "plasmo": "0.90.5",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.0",
    "@types/chrome": "0.1.24",
    "@types/node": "^24.9.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "postcss": "8.5.6",
    "typescript": "5.9.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage",
      "activeTab",
      "sidePanel"
    ],
    "host_permissions": [
      "$PLASMO_PUBLIC_CLERK_SYNC_HOST/*",
      "$CLERK_FRONTEND_API/*",
      "https://sis.nyu.edu/*",
      "https://albert.nyu.edu/*"
    ]
  }
}
