{
  "$schema": "./node_modules/wrangler/config-schema.json",
  "name": "albert-plus-scraper",
  "routes": [{ "pattern": "scraper.albertplus.com", "custom_domain": true }],
  "main": "src/index.ts",
  "minify": true,
  "compatibility_date": "2025-09-26",
  "compatibility_flags": ["nodejs_compat"],
  "observability": {
    "enabled": true
  },
  "triggers": {
    "crons": ["0 */6 * * *"] // Run every 6 hours
  },
  "queues": {
    "producers": [
      {
        "queue": "albert-plus-scraping-queue",
        "binding": "SCRAPING_QUEUE"
      }
    ],
    "consumers": [
      {
        "queue": "albert-plus-scraping-queue",
        "max_batch_size": 10,
        "max_batch_timeout": 60
      }
    ]
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "albert-plus-scraper-ops",
      "database_id": "b96165c7-c7ae-488e-b171-a9ceeef8937c",
      "migrations_dir": "src/drizzle/migrations"
    }
  ],
  "vars": {
    "SCRAPING_BASE_URL": "https://bulletins.nyu.edu/",
    "ALBERT_SCRAPING_BASE_URL": "https://bulletins.nyu.edu/class-search/"
  }
}
