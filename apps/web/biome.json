{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "extends": "//",
  "files": {
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!public",
      "!build",
      "!src/components/ui",
      "!convex/_generated"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  }
}
